{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": 1,
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "warn",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "space-before-blocks": ["warn", "always"],
    "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
    "keyword-spacing": "warn"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "XDomainRequest": true
  }
}
